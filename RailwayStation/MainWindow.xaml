<Window x:Class="RailwayStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailwayStation"
        mc:Ignorable="d"
        Title="Railway Station" Height="180" Width="525">
    <Grid>

        <ComboBox
            HorizontalAlignment="Left"
            Margin="0,0,0,0"
            VerticalAlignment="Top"
            Width="70"
            Loaded="Park_ComboBox_Loaded"
            SelectionChanged="Park_SelectionChanged"/>

        <ComboBox
            HorizontalAlignment="Left"
            Margin="70,0,0,0"
            VerticalAlignment="Top"
            Width="70"
            Loaded="Color_ComboBox_Loaded"
            SelectionChanged="Color_SelectionChanged"/>

        <local:GraphControl x:Name="GraphControl"/>
    </Grid>
</Window>
